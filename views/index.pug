extends layout

block content
  h1= title
  h2 Hello and welcome to our pc build
  p The specs of out gaming pc is: #{title}
  div.container
    ul#expenses

  hr
  form
    h2 Input a new component:
    p Enter a component part
    input(type="text", id="NewComponent", name="NewComponent", placeholder="", onfocus="this.value=''").form-control
    br
    p Enter the specifications of componet
    input(type="text", id="NewSpec", name="NewSpec", placeholder="", onfocus="this.value=''").form-control
    br
    p Enter the price of the component
    input(type="text", id="NewPrice", name="NewPrice", placeholder="", onfocus="this.value=''").form-control
    br
    br
    input(type="submit", value="Submit").btn.btn-danger